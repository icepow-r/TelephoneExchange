<Window x:Class="TelephoneExchange.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelephoneExchange.Client"
        mc:Ignorable="d"
        Title="Телефон - Мини-АТС" Height="600" Width="900"
        Closing="Window_Closing">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель параметров (верхняя) -->
        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Адрес сервера:" Width="120"/>
                    <TextBox x:Name="txtServerAddress" Width="150" Text="127.0.0.1:5000" Margin="0,0,10,0"/>
                    <Button x:Name="btnConnect" Content="Подключиться" Width="120" Click="BtnConnect_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Label Content="Мой номер:" Width="120"/>
                    <TextBlock x:Name="txtMyNumber" Text="-" VerticalAlignment="Center" Margin="0,0,20,0" FontWeight="Bold"/>
                    <Label Content="Статус:" Width="80"/>
                    <TextBlock x:Name="txtConnectionStatus" Text="Отключен" VerticalAlignment="Center" Foreground="Red"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Основная область -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <!-- Панель управления (левая) -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,5,0">
                <StackPanel>
                    <Label Content="Управление" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                    <Button x:Name="btnPickup" Content="Снять трубку" Margin="0,5" Click="BtnPickup_Click" IsEnabled="False"/>
                    <Button x:Name="btnHangup" Content="Положить трубку" Margin="0,5" Click="BtnHangup_Click" IsEnabled="False"/>

                    <Separator Margin="0,10"/>

                    <Label Content="Набрать номер:"/>
                    <TextBox x:Name="txtDialNumber" Margin="0,5" MaxLength="3"/>
                    <Button x:Name="btnDial" Content="Позвонить" Margin="0,5" Click="BtnDial_Click" IsEnabled="False"/>

                    <Separator Margin="0,10"/>

                    <Label Content="Сигнал:"/>
                    <TextBlock x:Name="txtSignal" Text="-" Margin="5" FontStyle="Italic"/>
                </StackPanel>
            </Border>

            <!-- Панель чата (центральная) -->
            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Content="Чат" FontWeight="Bold" FontSize="14"/>

                    <TextBox Grid.Row="1" x:Name="txtChatHistory" 
                             IsReadOnly="True" 
                             TextWrapping="Wrap" 
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,5"/>

                    <Grid Grid.Row="2" Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" x:Name="txtChatInput" Margin="0,0,10,0" IsEnabled="False"/>
                        <Button Grid.Column="1" x:Name="btnSendMessage" Width="100" Content="Отправить" Click="BtnSendMessage_Click" IsEnabled="False" HorizontalAlignment="Right"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Панель статуса (правая) -->
            <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="5,0,0,0">
                <StackPanel>
                    <Label Content="Статус" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                    <Label Content="Моё состояние:"/>
                    <TextBlock x:Name="txtMyState" Text="Idle" Margin="5,0,0,10" FontWeight="Bold" Foreground="Blue"/>

                    <Separator Margin="0,10"/>

                    <Label Content="Абоненты в сети:"/>
                    <ListBox x:Name="lstSubscribers" Height="300" Margin="0,5"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
